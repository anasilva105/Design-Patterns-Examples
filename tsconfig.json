{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "removeComments": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,      
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]

}
